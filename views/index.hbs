<body>
    {{!-- NAVPANEL --}}
    <nav>
        <img src="https://sweet.tv/images/v2/logo_sweettv.svg">
        <a href="https://sweet.tv/en/tv">TV</a>
        <a href="/">Films</a>
        <a href="https://sweet.tv/en/series">TV series</a>
        <a href="https://sweet.tv/en/cartoons">Cartoons</a>
        <a href="https://sweet.tv/en/education">Education</a>
        <div style="width:50%;">
            <a href="/login" id="loginbtn">Sign in</a>
            <a href="" id="logoutbtn" style="display:none;">Logout</a>
        </div>
    </nav>

    {{!-- TITLE --}}
    {{#each selectedgenres}}
    <div style="width: 100%; text-align: center;">
        <h1 style="color:white;">{{this.GenreName}}</h1>
    </div>
    {{/each}}

    {{!-- LIST GENRES --}}
    <div style="display:flex; align-itens:center; justify-content:center;">
        <form action="/filter" method="POST" style="display:flex;">
            <div class="filters">
                <select id="selectBoxGenre" class="dropdown" name="dropdown" onchange="changeGenreFunc();">
                    <option class="genreitem" selected>Genres</option>
                    {{#each genres}}
                    <option class="genreitem">{{this.GenreName}}</option>
                    {{/each}}
                </select>

                <select id="selectBoxCountry" class="dropdown" name="dropdown" onchange="changeCountryFunc();">
                    <option class="countryitem" selected>Country</option>
                    {{#each countries}}
                    <option class="countryitem">{{this.CountryName}}</option>
                    {{/each}}
                </select>

                <select id="selectBoxYear" class="dropdown" name="dropdown" onchange="changeYearFunc();">
                    <option class="yearitem" selected>Year</option>
                    {{#each years}}
                    <option class="yearitem">{{this.Year}}</option>
                    {{/each}}
                </select>


                <input id="genreinput" type="text" name="genre" value="" style="display:none;" />
                <input id="countryinput" type="text" name="country" value="" style="display:none;" />
                <input id="yearinput" type="text" name="year" value="" style="display:none;" />
                <button id="submitgenrebtn" type="submit">Submit</button>
            </div>
        </form>
    </div>


    {{!-- LIST FILMS --}}
    <div id="page">
        <form action="/movieInfo" method="POST">
            <div id="content">
                {{#each movies}}
                <div class="elem" name="{{this.MovieName}}">
                    <img src="{{this.ImageName}}" draggable="false" height="300px" width="200px"
                        style="border-radius: 10px;" name="{{this.MovieName}}" class="image">
                    <h3>{{this.MovieName}}</h3>
                    <h5>{{this.GenreName}}</h5>
                </div>
                {{/each}}
            </div>
            <input id="movieinput" type="text" name="movie" value="" style="display:none;" />
            <button id="submitbtn" type="submit" style="display:none;">S</button>
        </form>
        </table>
    </div>




